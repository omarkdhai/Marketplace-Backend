{
  "version": 3,
  "name": "Quarkus API Gateway",
  "port": 8084,
  "cache_ttl": "300s",
  "timeout": "3000ms",
  "endpoints": [
    {
      "endpoint": "/api/auth/{*}",
      "backend": [
        {
          "url_pattern": "/{*}",
          "host": ["http://auth-service:8081"]
        }
      ]
    },
    {
      "endpoint": "/api/products/{*}",
      "backend": [
        {
          "url_pattern": "/{*}",
          "host": ["http://product-service:8082"]
        }
      ]
    },
    {
      "endpoint": "/api/notifications/{*}",
      "backend": [
        {
          "url_pattern": "/{*}",
          "host": ["http://notif-service:8083"]
        }
      ]
    }
  ]
}
